<Window x:Class="Assignment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="textBox" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="176,37,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="61" Width="364" Background="Black" RenderTransformOrigin="0.5,0.5" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.15"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Del" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="177,110,0,0" VerticalAlignment="Top" Height="53" Width="82" BorderBrush="Gray" BorderThickness="3" Click="Number_Click" />
        <Button Content="R" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="268,110,0,0" VerticalAlignment="Top" Height="53" Width="85" BorderBrush="Gray" BorderThickness="3" Click="Number_Click" />
