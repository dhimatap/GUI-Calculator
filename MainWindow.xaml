        <Button Content="7" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="177,180,0,0" VerticalAlignment="Top" Height="37" Width="82" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="8" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="266,180,0,0" VerticalAlignment="Top" Height="37" Width="84" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="9" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.134,-0.53" Height="37" Width="76" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="/" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="458,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.44,0.965" Height="37" Width="82" BorderBrush="Gray" BorderThickness="3" Click="Number_Click"/>
        <Button Content="4" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="178,228,0,0" VerticalAlignment="Top" Height="41" Width="81" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="268,228,0,0" VerticalAlignment="Top" Height="41" Width="82" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="6" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,228,0,0" VerticalAlignment="Top" Height="41" Width="76" Background="Black" Foreground="White" RenderTransformOrigin="1.776,0.181" Click="Number_Click"/>
        <Button Content="*" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="459,227,0,0" VerticalAlignment="Top" Height="41" Width="82" Click="Number_Click" BorderBrush="Gray" BorderThickness="3"/>
        <Button Content="1" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Left" Margin="178,287,0,0" VerticalAlignment="Top" Width="80" Height="41" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="2" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="268,287,0,0" VerticalAlignment="Top" Width="82" Height="41" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="3" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Width="76" Height="41" Background="Black" Foreground="White" Click="Number_Click"/>
        <Button Content="-" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="460,286,0,0" VerticalAlignment="Top" Width="81" Height="41" Click="Number_Click" BorderBrush="Gray" BorderThickness="3"/>
