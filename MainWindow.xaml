        <Button Content="+" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="459,341,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.171,1.184" Height="41" Width="83" BorderBrush="Gray" BorderThickness="3" Click="Number_Click"/>

    </Grid>
</Window>
